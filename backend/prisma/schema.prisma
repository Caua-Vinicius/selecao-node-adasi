generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//Models 

model Curso {
  id String @id @default(uuid())
  nome String
  estudantes Estudante[] 
}

model Estudante {
  id String @id @default(uuid())
  nome String
  cpf String @unique
  matricula String @unique
  curso Curso @relation(fields: [cursoId], references: [id])
  cursoId String
  atividades Atividade[] 
}


model Tarefa {
  id String @id @default(uuid())
  nome String
  atividades Atividade[] 
}

model Atividade {
  id String @id @default(uuid())
  tarefa Tarefa @relation(fields: [tarefaId], references: [id])
  tarefaId String
  estudante Estudante @relation(fields: [estudanteId], references: [id])
  estudanteId String
  data DateTime
  horaAgendamentoInicio String
  horaAgendamentoTermino String
  horaInicio String?
  horaTermino String?
}

